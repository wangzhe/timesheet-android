<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:attr="http://schemas.android.com/apk/res/com.tw.timesheet.android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:fadingEdge="none"
              android:background="@drawable/item_background"
              android:paddingTop="15dp">
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
        <EditText android:id="@+id/time_sheet_detail_screen_country_code"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:hint="CHN"
                  android:text=""
                  android:textSize="20sp"
                  android:maxLines="1"
                  android:maxLength="3"
                  android:singleLine="true"
                  android:layout_gravity="right"
                  android:layout_alignParentRight="true"/>
        <EditText android:id="@+id/time_sheet_detail_screen_project_code"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:hint="REA_Android P2"
                  android:text=""
                  android:textSize="20sp"
                  android:maxLines="1"
                  android:singleLine="true"
                  android:layout_alignParentLeft="true"
                  android:layout_toLeftOf="@id/time_sheet_detail_screen_country_code"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/time_sheet_detail_screen_week_days_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center">
        <com.tw.timesheet.android.widget.WeekDayView android:id="@+id/time_sheet_detail_screen_mon_view"
                                                     android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     attr:labelText="Mon"/>
        <com.tw.timesheet.android.widget.WeekDayView android:id="@+id/time_sheet_detail_screen_tue_view"
                                                     android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     attr:labelText="Tue"
                                                     android:layout_toRightOf="@id/time_sheet_detail_screen_mon_view"/>
        <com.tw.timesheet.android.widget.WeekDayView android:id="@+id/time_sheet_detail_screen_wed_view"
                                                     android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     attr:labelText="Wed"
                                                     android:layout_toRightOf="@id/time_sheet_detail_screen_tue_view"/>
        <com.tw.timesheet.android.widget.WeekDayView android:id="@+id/time_sheet_detail_screen_thu_view"
                                                     android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     attr:labelText="Thu"
                                                     android:layout_toRightOf="@id/time_sheet_detail_screen_wed_view"/>
        <com.tw.timesheet.android.widget.WeekDayView android:id="@+id/time_sheet_detail_screen_fri_view"
                                                     android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     attr:labelText="Fri"
                                                     android:layout_toRightOf="@id/time_sheet_detail_screen_thu_view"/>
        <com.tw.timesheet.android.widget.WeekDayView android:id="@+id/time_sheet_detail_screen_sat_view"
                                                     android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     attr:labelText="Sat"
                                                     android:layout_toRightOf="@id/time_sheet_detail_screen_fri_view"/>
        <com.tw.timesheet.android.widget.WeekDayView android:id="@+id/time_sheet_detail_screen_sun_view"
                                                     android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     attr:labelText="Sun"
                                                     android:layout_toRightOf="@id/time_sheet_detail_screen_sat_view"/>
    </RelativeLayout>

    <Button android:id="@+id/time_sheet_detail_screen_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="add description"/>
    <Button android:id="@+id/time_sheet_detail_screen_new"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="new"/>
</LinearLayout>