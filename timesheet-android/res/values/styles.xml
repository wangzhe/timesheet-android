<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WindowTitleBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DefaultTheme" parent="android:Theme">
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:windowTitleSize">42px</item>
    </style>

    <style name="PopUpWindowAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/scale_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/scale_out_from_bottom</item>
    </style>
</resources>